require([
    'jquery',
    'mgsslick',
], function ($) {
    $(document).ready(function () {
        
        $(document).on("click",".sidebar_toggle_btn",function(e){
            $('.sidebar.sidebar-main').addClass('open');
            $('body.catalog-category-view').addClass('show-filter-sidebar');
        });

        $("body").on('click', '.sidebar-filter-overlay', function () {
            $('body.catalog-category-view').removeClass('show-filter-sidebar');
            $('.sidebar.sidebar-main').removeClass('open');
        });

        $('.plp_company_logo_col').slick({
            dots: false,
            infinite: true,
            speed: 300,
            autoplay: false,
            autoplaySpeed: 3000,
            slidesToShow: 9,
            slidesToScroll: 3,
            responsive: [
                {
                    breakpoint: 1280,
                    settings: {
                        slidesToShow: 7,
                        slidesToScroll: 3
                    }
                },
                {
                    breakpoint: 910,
                    settings: {
                        slidesToShow: 5,
                        slidesToScroll: 2,
                        arrows: true,
                    }
                },
                {
                    breakpoint: 600,
                    settings: {
                        slidesToShow: 3,
                        slidesToScroll: 1
                    }
                }
            ]
        });

        $('.plp_product_name_col').slick({
            dots: false,
            infinite: true,
            speed: 300,
            autoplay: false,
            autoplaySpeed: 3000,
            slidesToShow: 8,
            slidesToScroll: 3,
            responsive: [
                {
                    breakpoint: 1280,
                    settings: {
                        slidesToShow: 6,
                        slidesToScroll: 3
                    }
                },
                {
                    breakpoint: 910,
                    settings: {
                        slidesToShow: 4,
                        slidesToScroll: 2,
                        arrows: true,
                    }
                },
                {
                    breakpoint: 600,
                    settings: {
                        slidesToShow: 2,
                        slidesToScroll: 1
                    }
                }
            ]
        });
    });
});

require([
    'jquery'
], function ($) {
    var x = window.matchMedia("(max-width: 767px)");
    footerAccrd(x);
    x.addListener(footerAccrd);
    function footerAccrd(x) {
        if (x.matches) {               
            $(document).on("click","#footer-accordion-mobile",function(e){
                if (!jQuery(e.target).is('.block-content-blk1') && !jQuery(e.target).is('.sidebar_toggle_btn') && !jQuery(e.target).is('.fa.fa-sliders')) {
                    $(this).next().stop().animate({height: 'toggle'}, 200).toggleClass('footer-accordion-content-active');
                    $(this).stop().toggleClass('footer-accordion-content-active'); 
                }
            });
        }
    }
});
